@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Categoria", "Index", "Categorias", new { area = "TestConocimiento" }, null)</li>
        <li>@Html.ActionLink("Pregunta", "Index", "PreguntaTests", new { area = "TestConocimiento" }, null)</li>
        <li>@Html.ActionLink("Respuesta", "Index", "RespuestaTests", new { area = "TestConocimiento" }, null)</li>
        <li>@Html.ActionLink("Registrarse", "Register", "Account", new { id = "registerLink", area = "" }, null)</li>
        <li>@Html.ActionLink("Iniciar sesión", "Login", "Account", new { id = "loginLink", area = "" }, null)</li>
    </ul>
}
